@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Book Catalog";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="mb-4">Book Catalog</h2>
    
    <form method="get" class="mb-3">
        <input type="text" name="searchString" placeholder="Search..." class="form-control" value="@ViewBag.SearchString" />
    </form>

        <table class="table">
            <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="title">Title</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="author">Author</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="status">Status</a>
                </th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            </thead>
        </table>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var book in Model)
        {
            <div class="col d-flex">
                <div class="card flex-fill shadow-sm">
                    <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height:250px; object-fit:cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">Author: @book.Author</p>
                        <p class="card-text">Status: @book.Status</p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary btn-sm">Details</a>
                            <a asp-action="Borrow" asp-route-id="@book.Id" class="btn btn-success btn-sm">Borrow</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-1">
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewBag.SearchString">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
