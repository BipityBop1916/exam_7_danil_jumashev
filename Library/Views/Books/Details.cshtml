@model Library.Models.Book

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h3>@Model.Title</h3>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.CoverImageUrl" class="img-fluid mb-3" />
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Year:</strong> @Model.YearPublished</p>
        <p><strong>Status:</strong> @Model.Status</p>
        @if (Model.Category != null)
        {
            <p><strong>Category:</strong> @Model.Category.Name</p>
        }
        else
        {
            <p><strong>Category:</strong> Not available</p>
        }
        <p>@Model.Description</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</div>